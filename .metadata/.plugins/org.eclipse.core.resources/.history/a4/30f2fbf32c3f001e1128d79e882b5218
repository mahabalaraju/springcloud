package com.uploaddownload.Service;

import java.io.IOException;
import java.util.Optional;

import javax.swing.filechooser.FileNameExtensionFilter;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;

import com.uploaddownload.entity.product;
import com.uploaddownload.repo.productRepository;

@Service
public class productService {

	@Autowired
	private productRepository repo;

	  public String upload(MultipartFile file) throws IOException {
		  product prod=repo.save(product.builder()
				  .filename(file.getName())
				  .filetype(file.getContentType())
				  .data(file.getBytes()).build()
				   );
				  return "product uploaded successfully:"+file.getOriginalFilename();
	  }
	
	  public byte[] download(String filename) {
		 Optional<product> image=repo.filename(filename);
		 byte[] images=image.get().getData();
		 return images;
	  }
	
	  
	public String uploadfile(MultipartFile file) {
		try {
			product prod= repo.save(product.builder()
					.filename(file.getName())
					.filename(file.getContentType())
					.data(file.getBytes()).build());
		} catch (IOException e) {
			e.getMessage();
		}
		return "product uploaded successfully "+ file.getOriginalFilename();
	}
}






























